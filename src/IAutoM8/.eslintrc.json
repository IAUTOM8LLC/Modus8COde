{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "import"
    ],
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "experimentalDecorators": true,
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "__DEV__": false
    },
    "rules": {
        "no-console": 1,
        "no-unused-vars": 1,
        "no-debugger": 1,
        "react/prop-types": 0,
        "import/order": [
            "error",
            { "newlines-between": "always-and-inside-groups" }
        ],
        "import/newline-after-import": [
            "error",
            { "count": 1 }
        ],
        "max-len": [
            "error",
            {
                "code": 110,
                "ignoreTrailingComments": true
            }
        ],
        "no-var": "error",
        "no-this-before-super": "error",
        "prefer-const": "warn",
        "prefer-template": "warn",
        "jsx-quotes": [ "error", "prefer-double" ],
        "yoda": "error",
        "eqeqeq": "warn"
    }
}
