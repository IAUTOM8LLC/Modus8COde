{
    "presets": [
        [
            "es2015",
            {
                "modules": false
            }
        ],
        "react",
        "stage-0"
    ],
    "plugins": [
        "react-hot-loader/babel",
        "transform-runtime",
        "transform-decorators-legacy",
        // Convert member imports of semantic-ui-react components to default imports
        // and add semantic-ui-less imports for the used components.
        [
            "transform-semantic-ui-react-imports",
            {
                "addLessImports": true
            }
        ],
        [
            "lodash"
        ]
    ],
    "comments": false
}
